<Window x:Class="FrancisLibrary.RemoveMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrancisLibrary"
        mc:Ignorable="d"
        Title="RemoveMember" Height="400" Width="400">
    <Grid >
        <TextBlock HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Text="Remove Member Window" VerticalAlignment="Top" Height="21" FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="77,156,0,0" TextWrapping="Wrap" Text="Enter Username:" VerticalAlignment="Top" Height="26" Width="106" FontSize="14"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Margin="213,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="26"/>
        <Button  Content="Remove Member" HorizontalAlignment="Left" Margin="219,233,0,0" VerticalAlignment="Top" Height="34"  Width="108" Click="RemoveMember_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
